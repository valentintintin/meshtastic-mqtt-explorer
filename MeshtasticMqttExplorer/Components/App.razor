</body>

</html>

@code {
    private string? Version { get; set; }
    
    protected override void OnInitialized()
    {
        Version = GetType().Assembly.GetName().Version?.ToString();
        
        MessageService.Config(new MessageGlobalConfig {
            Duration = 2000
        });
        
        base.OnInitialized();
    }

}